@page
@using NorthwindShared
@model NorthwindEmployees.Pages.EmployeesPageModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="row">
    <h1 class="display-2">Employees</h2>
</div>
<div class="row">
    @foreach(Employee employee in Model.Employees)
    {
        <div class="col-sm-3">
            <partial name="_Employee" model="employee" /> @* Partial views are like small pieces of a Razorpage *@
            @* By convention, <partial> names start with an underscore *@
        </div>
    }
</div>